<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="card-primary" TargetType="materialDesign:Card">
        <Setter Property="Width" Value="770"/>
        <Setter Property="Margin" Value="20 15"/>
        <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth3"/>
        <Setter Property="UniformCornerRadius" Value="15" />
        <Setter Property="FontSize" Value="18"/>
    </Style>
</ResourceDictionary>