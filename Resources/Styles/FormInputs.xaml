<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="txt-base" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
        <Setter Property="Margin" Value="10 10"/>
    </Style>

    <Style x:Key="cb-base" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignFloatingHintComboBox}">
        <Setter Property="Margin" Value="10 10"/>
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style x:Key="dp-base" TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignFloatingHintDatePicker}">
        <Setter Property="Margin" Value="10 10"/>
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style x:Key="tp-base" TargetType="materialDesign:TimePicker" BasedOn="{StaticResource MaterialDesignFloatingHintTimePicker}">
        <Setter Property="Margin" Value="10 10"/>
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style x:Key="lb-h1" TargetType="Label" BasedOn="{StaticResource MaterialDesignLabel}">
        <Setter Property="Margin" Value="20 10"/>
        <Setter Property="FontSize" Value="24"/>
    </Style>

    <Style x:Key="lb-h2" TargetType="Label" BasedOn="{StaticResource MaterialDesignLabel}">
        <Setter Property="Margin" Value="10 10"/>
        <Setter Property="FontSize" Value="18" />
    </Style>
</ResourceDictionary>