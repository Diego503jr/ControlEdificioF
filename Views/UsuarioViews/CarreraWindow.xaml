<Window x:Class="ControlEdificioF.Views.UsuarioViews.CarreraWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlEdificioF.Views.UsuarioViews"
        mc:Ignorable="d"
        Title="CarreraWindow" 
        Height="500" Width="700"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        Background="{x:Null}" 
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontSize="18" Loaded="Page_Loaded">
    <materialDesign:Card Background="{DynamicResource MaterialDesignPaper}"
                         materialDesign:ShadowAssist.ShadowDepth="Depth4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0"
                   Content="Carreras"
                   Style="{StaticResource lb-h1}"
                   HorizontalAlignment="Left"/>

            <Grid Grid.Row="1"
                  Height="50"
                  Width="650"
                  HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button x:Name="btnCrear" 
                            Content="Crear una Carrera"
                            Style="{StaticResource bt-flat-info}" 
                            Click="btnCrear_Click"/>
                    <Button x:Name="btnEditar"
                            Content="Editar una Carrera" 
                            Style="{StaticResource bt-flat-info}" 
                            Click="btnEditar_Click"/>
                    <!--<Button x:Name="btnEliminar" 
                            Content="Eliminar" 
                            Style="{StaticResource bt-flat-info}"/>-->
                </StackPanel>
            </Grid>

            <StackPanel x:Name="spFormulario"
                        Grid.Row="2"
                        Width="650"
                        HorizontalAlignment="Center">
            <materialDesign:Card >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Content="Formulario Carrera"
                           Style="{StaticResource lb-h2}"/>

                    <TextBox x:Name="txtCarrera"
                             Grid.Row="1"
                             Grid.Column="0"
                             materialDesign:HintAssist.Hint="Nombre Carrera"
                             Style="{StaticResource txt-base}"/>
                    <!--<ComboBox x:Name="cbEstadoPrestamo"
                              Grid.Row="1"
                              Grid.Column="1"
                              materialDesign:HintAssist.Hint="Estado del prestamo"
                              Style="{StaticResource cb-base}">
                        <ComboBoxItem Content="Activo"/>
                        <ComboBoxItem Content="Inactivo"/>
                    </ComboBox>-->
                </Grid>
            </materialDesign:Card>

            <Grid>
                <StackPanel Height="50" 
                            HorizontalAlignment="Right" 
                            Orientation="Horizontal">
                    <Button x:Name="btnGuardar" 
                            Content="Guardar"
                            Style="{StaticResource bt-success}" 
                            Click="btnGuardar_Click"/>
                    <Button x:Name="btnCancelar" 
                            Content="Cancelar"
                            Style="{StaticResource bt-warning}" 
                            Click="btnCancelar_Click"/>
                </StackPanel>
            </Grid>
            </StackPanel>

            <DataGrid x:Name="dgCarreras" 
                      Grid.Row="4"
                      Width="650"
                      Style="{StaticResource dg-base}"
                      HorizontalAlignment="Left">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Identificador" Binding="{Binding XD}" />
                    <DataGridTextColumn Header="Identificador" Binding="{Binding XD}" />
                </DataGrid.Columns>
            </DataGrid>
            
        </Grid>
    </materialDesign:Card>
</Window>
