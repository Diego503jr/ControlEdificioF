<Window x:Class="ControlEdificioF.Views.UsuarioViews.RolWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlEdificioF.Views.UsuarioViews"
        mc:Ignorable="d"
        Title="RolWindow" 
        Height="500" Width="700"
        TextElement.FontSize="18"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        Background="{x:Null}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}" Loaded="Page_Loaded">
    <materialDesign:Card Background="{DynamicResource MaterialDesignPaper}"
                         materialDesign:ShadowAssist.ShadowDepth="Depth4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" 
                   Content="Roles"
                   Style="{StaticResource lb-h1}"/>

            <Grid Grid.Row="1"
                  Height="50"
                  Width="650"
                  HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button x:Name="btnCrear" 
                            Content="Crear un Rol"
                            Style="{StaticResource bt-flat-info}" 
                            Click="btnCrear_Click"/>
                    <Button x:Name="btnEditar"
                            Content="Editar un Rol" 
                            Style="{StaticResource bt-flat-info}" 
                            Click="btnEditar_Click"/>
                    <!--<Button x:Name="btnEliminar" 
                            Content="Eliminar" 
                            Style="{StaticResource bt-flat-info}"/>-->
                </StackPanel>
            </Grid>

            <StackPanel x:Name="spFormulario"
                        Grid.Row="2"
                        Width="650"
                        HorizontalAlignment="Left">
                
            <materialDesign:Card Style="{StaticResource card-primary}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Content="Formulario Rol"
                           Style="{StaticResource lb-h2}"/>

                    <TextBox x:Name="txtRol"
                             Grid.Row="1"
                             Grid.Column="0"
                             materialDesign:HintAssist.Hint="Nombre Rol"
                             Style="{StaticResource txt-base}"/>
                </Grid>
            </materialDesign:Card>

            <Grid>
                
                <StackPanel Height="50" 
                            HorizontalAlignment="Right" 
                            Orientation="Horizontal">
                    <Button x:Name="btnGuardar" 
                            Content="Guardar"
                            Style="{StaticResource bt-success}" 
                            Click="btnGuardar_Click"/>
                    <Button x:Name="btnCancelar" 
                            Content="Cancelar"
                            Style="{StaticResource bt-warning}" 
                            Click="btnCancelar_Click"/>
                </StackPanel>
            </Grid>
            </StackPanel>
            

            <DataGrid x:Name="dgRol" Grid.Row="4"
                      Width="650"
                      Style="{StaticResource dg-base}"
                      HorizontalAlignment="Left">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Identificador" Binding="{Binding XD}" />
                    <DataGridTextColumn Header="Identificador" Binding="{Binding XD}" />
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </materialDesign:Card>
</Window>
