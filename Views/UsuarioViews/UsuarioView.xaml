<Page x:Class="ControlEdificioF.Views.UsuarioViews.UsuarioView"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ControlEdificioF.Views.UsuarioViews"
      mc:Ignorable="d" 
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontSize="18"
      Title="UsuarioView" Loaded="Page_Loaded">
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label Grid.Row="0" 
                   Content="Usuarios"
                   Style="{StaticResource lb-h1}"
                   HorizontalAlignment="Left"/>

            <Grid Grid.Row="1"
                  Height="50"
                  Width="770"
                  HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnCrear" 
                            Content="Crear un Usuario"
                            Style="{StaticResource bt-flat-info}" 
                            Click="btnCrear_Click"/>
                    <Button x:Name="btnEditar"
                            Content="Editar un Usuario" 
                            Style="{StaticResource bt-flat-info}" 
                            Click="btnEditar_Click"/>
                    <!--<Button x:Name="btnEliminar" 
                            Content="Eliminar" 
                            Style="{StaticResource bt-flat-info}"/>-->
                </StackPanel>
            </Grid>

            <StackPanel x:Name="spFormulario"
                        Grid.Row="2"
                        HorizontalAlignment="Left">
                <materialDesign:Card Style="{StaticResource card-primary}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  Width="*"/>
                            <ColumnDefinition  Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition  Height="Auto"/>
                            <RowDefinition  Height="Auto"/>
                            <RowDefinition  Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0"
                               Content="Formulario Usuario"
                               Style="{StaticResource lb-h2}"/>

                        <TextBox x:Name="txtNombreUsuario"
                                 Grid.Row="1"
                                 Grid.Column="0"
                                 materialDesign:HintAssist.Hint="Nombre Usuario"
                                 Style="{StaticResource txt-base}"/>
                        <TextBox x:Name="txtApellidoUsuario"
                                 Grid.Row="1"
                                 Grid.Column="1"
                                 materialDesign:HintAssist.Hint="Apellido Usuario"
                                 Style="{StaticResource txt-base}"/>
                        <TextBox x:Name="txtDUIUsuario"
                                 Grid.Row="2"
                                 Grid.Column="0"
                                 materialDesign:HintAssist.Hint="DUI Usuario"
                                 Style="{StaticResource txt-base}"/>
                        <ComboBox x:Name="cbEstado"
                                  Grid.Row="2"
                                  Grid.Column="1"
                                  materialDesign:HintAssist.Hint="Estado Usuario"
                                  Style="{StaticResource cb-base}">
                            <ComboBoxItem Content="Activo"/>
                            <ComboBoxItem Content="Inactivo"/>
                        </ComboBox>
                    </Grid>
                </materialDesign:Card>

                <Grid Width="770" 
                      Height="50">
                    <StackPanel Height="50" 
                                 HorizontalAlignment="Right" 
                                 Orientation="Horizontal">
                        <Button x:Name="btnGuardar" 
                                 Content="Guardar"
                                 Style="{StaticResource bt-success}" 
                                Click="btnGuardar_Click"/>
                        <Button x:Name="btnCancelar" 
                                 Content="Cancelar"
                                 Style="{StaticResource bt-warning}" 
                                Click="btnCancelar_Click"/>
                    </StackPanel>
                </Grid>
            </StackPanel>


            <DataGrid x:Name="dgUsuarios"
                       Grid.Row="4"
                       HorizontalAlignment="Left"
                       Style="{StaticResource dg-base}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Historial" 
                                        Binding="{Binding MesaId}" />
                    <DataGridTextColumn Header="Historial" 
                                        Binding="{Binding MesaId}" />
                    <DataGridTextColumn Header="Historial" 
                                        Binding="{Binding MesaId}" />
                    <DataGridTextColumn Header="Historial" 
                                        Binding="{Binding MesaId}" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </ScrollViewer>
</Page>
