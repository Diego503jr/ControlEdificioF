<Page x:Class="ControlEdificioF.Views.PrestamoViews.PrestamoEquipoView"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ControlEdificioF.Views.PrestamoViews"
      mc:Ignorable="d"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontSize="18"
      Title="PrestamoEquipoView" Loaded="Page_Loaded">
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="44*"/>
                <ColumnDefinition Width="37*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Label Content="Prestamo Equipo" 
                   Style="{StaticResource lb-h1}"
                   HorizontalAlignment="Left"/>

            <Grid Grid.Row="1"
                  Height="50"
                  Width="770"
                  HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button x:Name="btnCrear" 
                            Content="Crear un Prestamo"
                            Style="{StaticResource bt-flat-info}" 
                            Click="btnCrear_Click"/>
                    <Button x:Name="btnEditar"
                            Content="Actualizar un Prestamo" 
                            Style="{StaticResource bt-flat-info}" 
                            Click="btnEditar_Click"
                            />
                    <!--<Button x:Name="btnEliminar" 
                            Content="Eliminar" 
                            Style="{StaticResource bt-flat-info}"/>-->
                </StackPanel>
            </Grid>

            <StackPanel x:Name="spFormulario" 
                        Grid.Row="2"
                        HorizontalAlignment="Left">
                <materialDesign:Card Style="{StaticResource card-primary}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0"
                               Grid.Row="0"
                               Content="Formulario Tecnico"
                               Style="{StaticResource lb-h2}"/>

                        <Button Grid.Column="1"
                                Margin="50 0"
                                Grid.Row="0"
                                Style="{StaticResource bt-flat-normal}">
                            <WrapPanel Width="250"
                                       VerticalAlignment="Center"
                                       Height="35">
                                <materialDesign:PackIcon Kind="Search" 
                                                         Height="35"
                                                         Margin="10 0"
                                                         Width="25"
                                                         VerticalAlignment="Center"/>
                                <Label Content="Buscar Estudiante"/>
                            </WrapPanel>
                        </Button>
                        <ComboBox x:Name="cbEstudiantePrestamo"
                                  Grid.Row="1"
                                  Grid.Column="0"
                                  materialDesign:HintAssist.Hint="Estudiante"
                                  Style="{StaticResource cb-base}">
                            <ComboBoxItem Content="Desarrollo de software"/>
                            <ComboBoxItem Content="Mecanica"/>
                            <ComboBoxItem Content="Mecatronica"/>
                        </ComboBox>
                        <DatePicker x:Name="dtpFechaPrestamoEquipo"
                                Grid.Row="1"
                                Grid.Column="1"
                                materialDesign:HintAssist.Hint="Seleccione la fecha"
                                Style="{StaticResource dp-base}"/>
                        <ComboBox x:Name="cbCarrera"
                              Grid.Row="2"
                              Grid.Column="0"
                              materialDesign:HintAssist.Hint="Carrera"
                              Style="{StaticResource cb-base}">
                            <ComboBoxItem Content="Desarrollo de software"/>
                            <ComboBoxItem Content="Mecanica"/>
                            <ComboBoxItem Content="Mecatronica"/>
                        </ComboBox>
                        <ComboBox x:Name="cbAsignarEquipo"
                                  Grid.Row="2"
                                  Grid.Column="1"
                                  materialDesign:HintAssist.Hint="Asignar Equipo"
                                  Style="{StaticResource cb-base}">
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="5"/>
                        </ComboBox>
                        <ComboBox x:Name="cbCentroComputo"
                              Grid.Row="3"
                              Grid.Column="0"
                              materialDesign:HintAssist.Hint="Centro Computo"
                              Style="{StaticResource cb-base}">
                            <ComboBoxItem Content="F-206"/>
                            <ComboBoxItem Content="F-306"/>
                            <ComboBoxItem Content="F-104"/>
                        </ComboBox>
                        <ComboBox x:Name="cbEstadoPrestamo"
                              Grid.Row="3"
                              Grid.Column="1"
                              materialDesign:HintAssist.Hint="Estado del prestamo"
                              Style="{StaticResource cb-base}">
                            <ComboBoxItem Content="En uso"/>
                            <ComboBoxItem Content="Devuelto"/>
                        </ComboBox>
                        <TextBox x:Name="txtCarnetEntregado"
                             Grid.Row="4"
                             Grid.Column="0"
                             materialDesign:HintAssist.Hint="Carnet Entregado"
                             Style="{StaticResource txt-base}"/>
                        <TextBox x:Name="txtCarnetRecibido"
                             Grid.Row="4"
                             Grid.Column="1"
                             materialDesign:HintAssist.Hint="Carnet Recibido"
                             Style="{StaticResource txt-base}"/>
                        <materialDesign:TimePicker x:Name="tmpHoraEntregaEquipo"
                                               Grid.Row="5"
                                               Grid.Column="0"
                                               materialDesign:HintAssist.Hint="Seleccione la hora Entrega"
                                               Style="{StaticResource tp-base}"/>
                        <materialDesign:TimePicker x:Name="tmpHoraRecibeEquipo"
                                               Grid.Row="5"
                                               Grid.Column="1"
                                               materialDesign:HintAssist.Hint="Seleccione la hora Devuelta"
                                               Style="{StaticResource tp-base}"/>
                    </Grid>
                </materialDesign:Card>

                <Grid Grid.Row="3" 
                  Width="770" 
                  Height="50">

                    <StackPanel Height="50" 
                            HorizontalAlignment="Right" 
                            Orientation="Horizontal">
                        <Button x:Name="btnEntregar" 
                                Content="Entregar"
                                Style="{StaticResource bt-success}" 
                                Click="btnEntregar_Click"/>
                        <Button x:Name="btnCancelar" 
                            Content="Cancelar"
                            Style="{StaticResource bt-warning}" Click="btnCancelar_Click"/>
                        <Button x:Name="btnDevuelto" 
                            Content="Devuelto"
                            Style="{StaticResource bt-danger}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <DataGrid x:Name="dgPrestamoEquipo"
                       Grid.Row="4"
                       HorizontalAlignment="Left"
                       Style="{StaticResource dg-base}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Historial" 
                             Binding="{Binding MesaId}" />
                    <DataGridTextColumn Header="Historial" 
                             Binding="{Binding MesaId}" />
                    <DataGridTextColumn Header="Historial" 
                             Binding="{Binding MesaId}" />
                    <DataGridTextColumn Header="Historial" 
                             Binding="{Binding MesaId}" />
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </ScrollViewer>
</Page>
